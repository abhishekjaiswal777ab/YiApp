<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/activity_dialog_box_shape"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ActivityHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Activity:"
            android:textStyle="bold"
            android:textSize="34sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Activity1_Title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity 1"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Activity1_Desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity 1 Description ..."
            android:textColor="@color/desc_gray_font"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            />

        <Button
            android:id="@+id/Activity1_Upload_Btn"
            android:layout_width="160dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/baseline_add_24"
            android:text="Upload"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/activity_upload_btn_lightblue"
            android:gravity="center"/>

        <TextView
            android:id="@+id/Activity2_Title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity 2"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Activity2_Desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity 2 Description ..."
            android:textColor="@color/desc_gray_font"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            />

        <Button
            android:id="@+id/Activity2_Upload_Btn"
            android:layout_width="160dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/baseline_add_24"
            android:text="Upload"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/activity_upload_btn_lightblue"
            android:gravity="center"/>

        <TextView
            android:id="@+id/Activity3_Title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity 3"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Activity3_Desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity 3 Description ..."
            android:textColor="@color/desc_gray_font"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            />

        <Button
            android:id="@+id/Activity3_Upload_Btn"
            android:layout_width="160dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/baseline_add_24"
            android:text="Upload"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/activity_upload_btn_lightblue"
            android:gravity="center"

            />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_dark_blue"
            android:layout_marginTop="26dp"
            android:layout_gravity="center"
            android:text="Submit"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>