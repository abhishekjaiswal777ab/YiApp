<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YiApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color"> @color/purple_200</item>
    </style>
    
    <style name="Theme.YiApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YiApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YiApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    //light theme for app
    <style name = "SCREEN">
        <item name="android:background">@color/white</item>
    </style>
    <style name ="Header">
        <item name="android:background">@color/dark</item>
    </style>
    <style name="Wave">
        <item name="android:background">@drawable/wave</item>
        <item name="color">@color/header_dark</item>
    </style>

    //text colour if light mode is on
    <style name="TEXT">
        <item name="android:textColor">@color/text_colour</item>
    </style>

    //button colour if light mode is on
    <style name="BUTTON">
        <item name="android:background">@color/dark</item>
        <item name="android:textColor">@color/text_colour</item>
    </style>

    //card colour for light
    <style name="Card">
        <item name="android:background">@color/card</item>
    </style>
</resources>